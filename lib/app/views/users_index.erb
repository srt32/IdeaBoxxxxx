<%= erb :user_form, locals: {user: user}  %>

<h3>Existing Users</h3>
<ul>
  <% users.each do |user| %>
    <li class="user_list_item">
    <%= user.email %>
    <div class="user_see_more">
      <a href="/users/<%= user.id %>" >See more</a> <br />
    </div>
      <% if false %>
      <a href="/<%= idea.id %>/edit">Edit</a>
      <form action="/<%= idea.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="delete" />
      </form>
      <% end %>
    </li>
  <% end %>
</ul>
